---
import Layout from "./BaseLayout.astro"

const { frontmatter } = Astro.props;

const dateLabel = frontmatter.startDate ? `${frontmatter.startDate} - ${frontmatter.endDate}` : frontmatter.endDate;
---

<Layout title={frontmatter.title}>
    <main>
        <h3 class="subtitle">{dateLabel}</h3>
        {frontmatter.image && <img src={frontmatter.image} alt={frontmatter.title + " thumbnail"} class="bannerImage">}
        <slot />
    </main>
</Layout>