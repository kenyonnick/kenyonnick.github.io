---
import Layout from "../layouts/BaseLayout.astro"
import '../styles/global.css';
import '../styles/projects.css';

const allProjects = await Astro.glob('./projects/*.md');

---

<Layout title="Projects">
    <main>
        <h3 class="subtitle">Things I've worked on</h3>
        <div class="projects">
            {allProjects.map((post) => (
                <div class="card">
                    {post.frontmatter.image && <img src={post.frontmatter.image.url} alt={post.frontmatter.image.alt} />}
                    <div class="content">
                        <a href={post.url}>{post.frontmatter.title}</a>
                        <p>{post.frontmatter.description}</p>
                        <div class="tags">{post.frontmatter.tags.map((tag: string) => <span class="tag">{tag}</span>)}</div>
                    </div>
                </div>
            ))}
        </div>
        <p><em>I'm still working on back filling this</em></p>
    </main>
</Layout>